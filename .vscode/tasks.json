{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start OpenOCD Server",
            "type": "shell",
            "command": "sudo",
            "args": [
                "openocd",
                "-s",
                "tcl",
                "-f",
                "interface/cmsis-dap.cfg",
                "-f",
                "target/rp2040.cfg",
                "-c",
                "\"adapter speed 5000\""
            ],
            "problemMatcher": { "owner": "custom", "pattern": [ { "regexp": ".", "file": 1, "location": 2, "message": 0 } ], "background": { "activeOnStart": true, "beginsPattern": "Info : clock speed 5000 kHz", "endsPattern": "ready" } },
            "isBackground": true
        }
    ]
}
